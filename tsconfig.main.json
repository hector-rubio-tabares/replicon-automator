{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/main",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@common/*": ["src/common/*"],
      "@shared/*": ["src/common/*"]
    }
  },
  "include": ["src/main/**/*", "src/common/**/*"]
}
